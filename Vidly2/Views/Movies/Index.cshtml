@Model IEnumerable<Vidly.Models.Movie>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Index</h2>
    <table id="movies" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@Html.ActionLink((string)m.Name, "Edit", "Customers", new { id = m.Id }, null)</td>
                    <td>m.Genre</td>
                </tr>

            }
        </tbody>
       
        
    </table>
